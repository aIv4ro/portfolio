---
import { useTranslation, type Locale } from '../i18n/i18n'

const currentLocale = Astro.currentLocale as Locale
const t = useTranslation(currentLocale)
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={t('description')} />
    <meta name="generator" content={Astro.generator} />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={t('og.title')} />
    <meta property="og:description" content={t('og.description')} />
    <meta property="og:image" content={t('og.image')} />

    <meta property="twitter:domain" content="alvaromg.vercel.app">
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@alvaromagu" />
    <meta name="twitter:title" content={t('og.title')} />
    <meta name="twitter:description" content={t('og.description')} />
    <meta name="twitter:image" content={t('og.image')} />

    <link rel="icon" type="image/svg+xml" href="/icons/favicon.svg" />
    <title>{t('title')}</title>
  </head>
  <body
    class="relative max-w-[900px] m-auto text-primary bg-primary"
  >
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Nunito";
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url('/fonts/nunito-regular.woff2') format('woff2');
  }

  :root {
    font-family: 'Nunito', sans-serif;
    scroll-behavior: smooth;
    --app-bar-height: 60px;
    --text-primary: black;
    --text-secondary: #626262;
    --text-link-hover: #0d5dc1;
    --bg-primary: 246, 246, 246;
    --bg-primary-blur: rgba(var(--bg-primary), 0.9);
    --bg-on-primary: #e5e5e5;
    --bg-code: #7c3aed25;
    --border-primary: #e0e0e0;
    --border-on-primary: #e0e0e0;
    --border-code: #7c3aed;
  }

  .dark {
    --text-primary: #e0dfdf;
    --text-secondary: #d5c5c5;
    --text-link-hover: #4497ff;
    --bg-primary: 44, 51, 51;
    --bg-primary-blur: #2c3333e0;
    --bg-on-primary: #282828;
    --border-primary: #e0e0e0;
    --border-on-primary: #282828;
  }
</style>

<script>
  const prefersDark = (() => {
    const theme = localStorage.getItem('theme')
    if (theme != null) return theme === 'dark'
    return window.matchMedia('(prefers-color-scheme: dark)').matches
  })()
  if (prefersDark) {
    document.documentElement.classList.add('dark')
  }
</script>
