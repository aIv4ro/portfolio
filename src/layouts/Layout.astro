---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="dark transition-colors">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative max-w-[900px] m-auto">
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--app-bar-height: 60px;
		/* light-theme vars */
		--text-color: black;
		--hover-text-color: #0d5dc1;
		--background-color: #f6f6f6;
		--op-background-color: #f6f6f6e0;
		--on-background-color: #e5e5e5;
		/* dark-theme vars */
		--d-text-color: #e0dfdf;
		--d-hover-text-color: #4497ff;
		--d-background-color: #2c3333;
		--d-op-background-color: #2c3333e0;
		--d-on-background-color: #395b64;
	}
	* {
		box-sizing: border-box;
	}
	html {
		font-family: Nunito, system-ui, sans-serif;
		font-weight: bold;
		color: var(--text-color);
		background-color: var(--background-color);
		scroll-behavior: smooth;
	}
	.dark {
		color: var(--d-text-color);
		background-color: var(--d-background-color);
	}
	body {
		margin: 0;
		padding: 0;
	}
	a {
		color: var(--text-color);
		text-decoration: none;
		transition: all 0.2s;
	}
	a:hover {
		color: var(--hover-text-color);
	}
	.dark a {
		color: var(--d-text-color);
		text-decoration: none;
		transition: all 0.2s;
	}
	.dark a:hover {
		color: var(--d-hover-text-color);
	}
	h3 {
		margin: 0;
	}

