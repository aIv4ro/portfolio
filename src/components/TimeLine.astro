---
import SectionTitle from './SectionTitle.astro'
import { useTranslation, type Locale } from '../i18n/i18n'

const currentLocale = Astro.currentLocale as Locale
const t = useTranslation(currentLocale)

const timeLine = [
  {
    time: t('experience.i2e.time'),
    title: t('experience.i2e.title'),
    content: t('experience.i2e.description')
  },
  {
    time: t('experience.sime.time'),
    title: t('experience.sime.title'),
    content: t('experience.sime.description')
  },
  {
    time: t('experience.dam.time'),
    title: t('experience.dam.title'),
    content: t('experience.dam.description')
  }
];
---

<section id="timeLine" class="min-h-screen">
  <SectionTitle>{t('experience.title')}</SectionTitle>
  <ol class="relative border-l border-on-primary ml-2 mt-3">
    {
      timeLine.map((work) => {
        return (
          <li class="mb-7 ml-4">
            <div class="absolute w-3 h-3 rounded-full mt-1.5 -left-1.5 bg-on-primary" />
            <time class="mb-1 font-semibold leading-none text-secondary">
              {work.time}
            </time>
            <h3 class="text-xl font-semibold text-primary">
              {work.title}
            </h3>
            <p class="text-lg font-normal text-secondary">
              {work.content}
            </p>
          </li>
        )
      })
    }
  </ol>
</section>
