---
import type { Locale } from '../i18n/i18n'
import Link from './Link.astro'
import English from './icons/English.astro'
import Spain from './icons/Spain.astro'

const locale = Astro.currentLocale as Locale
const link = locale === 'es' ? '/en' : '/'
---

<Link href={link}>
  {
  locale === 'es'
    ? <English />
    : <Spain />
  }
</Link>
