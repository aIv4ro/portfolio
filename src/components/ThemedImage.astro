---
import type { HTMLAttributes } from 'astro/types'

type Props = Omit<HTMLAttributes<'img'>, 'src'> & {
  light: string
  dark: string
}

const { light, dark, ...props } = Astro.props
---
<picture>
  <source
    srcset={dark}
    media='(prefers-color-scheme: dark)'
  />
  <img
    {...props}
    src={light}
  />
</picture>
