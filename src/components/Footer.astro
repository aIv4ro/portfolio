---
import Github from './icons/Github.astro'
import LinkedIn from './icons/LinkedIn.astro'
import { useTranslation, type Locale } from '../i18n/i18n'
import Mail from './icons/Mail.astro'
import Link from './Link.astro'

const currentLocale = Astro.currentLocale as Locale
const t = useTranslation(currentLocale)
---

<footer
  class="flex flex-row justify-center items-center py-3 border-t-[1px] border-black mt-10"
>
  <Link target="_blank" href="https://github.com/aIv4ro" aria-label={t('aria.label.link.github')}>
    <Github width="27px" height="27px" />
  </Link>
  <Link
    href="mailto:alvaromagu2002@gmail.com"
    class="hover:text-[var(--hover-text-color)] mail-button"
    aria-label={t('aria.label.button.contact')}
  >
    <Mail width={30} height={30} />
  </Link>
  <Link
    target="_blank"
    aria-label={t('aria.label.link.linkedin')}
    href="https://www.linkedin.com/in/alvaromagu/"
  >
    <LinkedIn width="30px" height="30px" />
  </Link>
</footer>
